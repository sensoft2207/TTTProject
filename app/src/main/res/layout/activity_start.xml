<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@drawable/half_circle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <com.senindia.tictactoe.font.MyTextviewLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Share Your Invite Code"
                    android:gravity="center"
                    android:textColor="@color/main_bg"/>

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <ImageView
                    android:background="@drawable/bangoe_logo"
                    android:layout_width="145dp"
                    android:gravity="center"
                    android:layout_height="match_parent"/>


            </LinearLayout>-->

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:elevation="20dp"
                        android:background="@drawable/circle_splash">

                        <com.senindia.tictactoe.font.MyTextviewLight
                            android:id="@+id/code_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="50dp"
                            android:textColor="@color/parts_main"/>

                    </LinearLayout>

                    <com.senindia.tictactoe.font.MyTextviewLight
                        android:id="@+id/tv_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:paddingTop="20dp"
                        android:text="Tap here to share"
                        android:gravity="center"/>


                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>



</LinearLayout>
